# https://superuser.com/a/556031
gif_from_video()
{
    if [ $# != 2 ]
    then
        echo Usage: $0 input.mp4 output.gif
        return
    fi
    ffmpeg -i "$1" -vf "fps=20,scale=160:-1:flags=lanczos,split[s0][s1];[s0]palettegen[p];[s1][p]paletteuse" -loop 0 "$2"
}
